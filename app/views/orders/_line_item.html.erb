<tr>
  <td>
    <%= image_tag line_item.product.image.url, alt: line_item.product.name, class: "img-thumbnail", style: "width: 100px; height: auto;" %>
    <%= line_item.product.name %>
    <p><%= line_item.product.description %></p>
  </td>
  <td>
    <%= number_to_currency(line_item.item_price) %>
  </td>
  <td>
    <%= line_item.quantity %>
  </td>
  <td>
    <%= number_to_currency(line_item.total_price) %>
  </td>
</tr>